<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_movie">

    <fragment
        android:id="@+id/nav_movie"
        android:name="com.example.moviecatalog.ui.movie.MovieFragment"
        android:label="@string/menu_movie"
        tools:layout="@layout/fragment_movie" />

    <fragment
        android:id="@+id/nav_tvShow"
        android:name="com.example.moviecatalog.ui.tvshow.TvShowFragment"
        android:label="@string/menu_tv_show"
        tools:layout="@layout/fragment_tv_show" />

    <fragment
        android:id="@+id/nav_favorite"
        android:name="com.example.moviecatalog.ui.favorite.FavoriteFragment"
        android:label="Favorite"
        tools:layout="@layout/favorite_fragment"
        />

    <fragment
        android:id="@+id/reminderSettingFragment"
        android:name="com.example.moviecatalog.ui.reminderSetting.ReminderSettingFragment"
        android:label="reminderSettingFragment" />

    <action
        android:id="@+id/open_settings_fragment"
        app:destination="@id/reminderSettingFragment"/>

</navigation>